<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="100"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="#000">

        <SearchView
            android:id="@+id/searchViewSeries"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"

            android:background="#55ffffff"></SearchView>


        <ImageView
            android:id="@+id/imgLatestMovie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tmdb"></ImageView>

        <TextView
            android:id="@+id/txtMovieLatestName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/light_blue"
            android:textSize="24dp"
            android:background="#bb000000"
            android:layout_alignParentBottom="true"
            tools:text="Movie"></TextView>


    </RelativeLayout>




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:background="#000">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/popular_series"
                android:textSize="20dp"
                android:id="@+id/lblPopulares"
                android:layout_margin="8dp"
                android:textColor="@color/light_green"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/rvMovies"></androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/top_series"
                android:textSize="20dp"
                android:id="@+id/lblUlt"
                android:layout_margin="8dp"
                android:textColor="@color/light_blue"></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/rvNowMovies"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>